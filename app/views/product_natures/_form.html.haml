-if @product_nature.new_record?
  -title "Nouveau type de produit"
-else
  -title @product_nature.name
  
=simple_fields_for(@product_nature, :html => {:class => "form-horizontal"}) do |f|
  =f.input :name
  =f.input :description, :input_html => {:rows => 6, :cols => 80}
  =f.input :payment_sequence
  =f.input :initial_quantity
